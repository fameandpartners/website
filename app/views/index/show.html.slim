      .media-wrap.lrg.skin-light
        = image_tag 'home-page-tiles/tile-sale.jpg', alt: 'Something here'
        .title-wrap
          .title
            h4 Lorem ipsum dolor sit amet
      = render 'shared/redesign/tabs_collection'
