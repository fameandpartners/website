ruby:
  link_to_dresses = build_taxon_path('dresses')

.page-content.index

  // Featured section
  .hero-tile-carousel

    // Carousel Item 1
    .main-hero-wrap.hero-wrap.copy-left
      picture.media-wrap.keep-ratio
        .inner-wrap
          source media='(max-width: 1023px)' srcset='#{image_path("homepage/hero-featured/featured-1-mob.jpg")}'
          source media='(min-width: 1024px)' srcset='#{image_path("homepage/hero-featured/featured-1-full.jpg")}'
          img src='#{image_path("homepage/hero-featured/featured-1-full.jpg")}' srcset='
            #{image_path("homepage/hero-featured/featured-1-mob.jpg")} 1023w,
            #{image_path("homepage/hero-featured/featured-1-full.jpg")} 1024w' alt="Style and Substance. Custom, contemporary designs. Tailor-made clothing. Less waste. We're more than just a pretty dress."

      .content-wrap
        .container
          .row
            .col-md-5.col-lg-4.col-xs-offset-1.col-xs-10
              .copy-wrap
                h1.heading
                  span Style and Substance
                  span.sub-heading
                    | Custom, contemporary designs. <br>Tailor-made clothing. Less waste. <br>We're more than just a pretty dress.
                = link_to dresses_path
                  .cta-wrapper
                    span.btn-md.btn-featured
                      | Start <span class="copy-highlight">designing</span>

    // Carousel Item 2
    .main-hero-wrap.hero-wrap.copy-right
      picture.media-wrap.keep-ratio
        .inner-wrap
          source media='(max-width: 1023px)' srcset='#{image_path("homepage/hero-featured/featured-2-mob.jpg")}'
          source media='(min-width: 1024px)' srcset='#{image_path("homepage/hero-featured/featured-2-full.jpg")}'
          img src='#{image_path("homepage/hero-featured/featured-2-full.jpg")}' srcset='
            #{image_path("homepage/hero-featured/featured-2-mob.jpg")} 1023w,
            #{image_path("homepage/hero-featured/featured-2-full.jpg")} 1024w' alt="Fresh picks. Easy dresses and mix-and-match separates in fresh, clean cotton."

      .content-wrap
        .container
          .row
            .col-md-4.col-md-offset-7.col-xs-offset-1.col-xs-10
              .copy-wrap
                h1.heading
                  span Fresh Picks
                  span.sub-heading
                    | Easy dresses and mix-and-match <br class="visible-lg-block">separates in fresh, clean cotton.
                = link_to the_freshly_picked_collection_path
                  .cta-wrapper
                    span.btn-md.btn-featured
                      | Shop <span class="copy-highlight">Cotton</span>

    // Carousel Item 3
    .main-hero-wrap.hero-wrap.copy-right
      picture.media-wrap.keep-ratio
        .inner-wrap
          source media='(max-width: 1023px)' srcset='#{image_path("homepage/hero-featured/featured-3-mob.jpg")}'
          source media='(min-width: 1024px)' srcset='#{image_path("homepage/hero-featured/featured-3-full.jpg")}'
          img src='#{image_path("homepage/hero-featured/featured-3-full.jpg")}' srcset='
            #{image_path("homepage/hero-featured/featured-3-mob.jpg")} 1023w,
            #{image_path("homepage/hero-featured/featured-3-full.jpg")} 1024w' alt="Slip into something. A little more custom. Create the slip dress of your dreams."

      .content-wrap
        .container
          .row
            .col-md-4.col-md-offset-8.col-xs-offset-1.col-xs-10
              .copy-wrap
                h1.heading
                  span Slip into something
                  span.sub-heading
                    | A little more custom. Create the <br class="visible-lg-block">slip dress of your dreams.
                = link_to '/dresses/slip-dress'
                  .cta-wrapper
                    span.btn-md.btn-featured
                      | Shop <span class="copy-highlight">Slip dresses</span>

  // Section: F&P Story
  section.section-box.container.section-fame-story
    .row
      .col-md-12.heading-overlay-wrapper
        h2.heading-overlay The Fame Story

    .tag-info-section
      .tag-info-wrapper.visible-lg-block
        .tag-info
          .section-name.vertical-text The Fame Story
          .diagonal-line

      .same-height-cols
        .row
          .col-md-4
            .item.bordered
              .item-copy
                h3 Your <em>personal</em> atelier.
                p.summary Timeless appeal. Contemporary edge. Completely customizable to suit your style.
                = link_to '/dresses/new-this-week'
                  span.cta-link-arrow-right
                    span.copy-highlight Explore
                    i.icon.icon-arrow-right
              = link_to '/dresses/new-this-week'
                = image_tag 'homepage/fame-story/fame-story-1.jpg', :class => 'img-responsive', alt: 'Your personal atelier'

          .col-md-4.hidden-sm.hidden-xs
            .item.bordered
              .item-copy
                h3 <em>Made</em>-to-order.
                p.summary Each piece is handmade just for you. <br class="visible-lg-block">No mass production, less waste.
                = link_to about_us_path
                  span.cta-link-arrow-right
                    span.copy-highlight Learn more
                    i.icon.icon-arrow-right
              = link_to about_us_path
                = image_tag 'homepage/fame-story/fame-story-2.jpg', :class => 'img-responsive', alt: 'Made-to-order'

          .col-md-4.hidden-sm.hidden-xs
            .item.bordered
              .item-copy
                h3 Tailored for <em>you</em>.
                p.summary Our signature size model means never<br class="visible-lg-block"> having to say, "It doesn't fit."
                = link_to size_guide_path
                  span.cta-link-arrow-right
                    span.copy-highlight The Fit Guide
                    i.icon.icon-arrow-right
              = link_to size_guide_path
                = image_tag 'homepage/fame-story/fame-story-3.jpg', :class => 'img-responsive', alt: 'Tailored for you'

  // Section: Style icon
  section.section-box.container.section-style-icon
    .row
      .col-md-12.heading-overlay-wrapper
        h2.heading-overlay F&P Style icon

    .tag-info-section
      .tag-info-wrapper.visible-lg-block
        .tag-info
          .section-name.vertical-text F&P Style icon
          .diagonal-line

      .row
        .col-md-12.cta-item-huge
          .section-img-wrap.copy-center
            picture
              .img-wrap
                source media='(max-width: 1023px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-1-mob.jpg")}'
                source media='(min-width: 1024px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-1-retina.jpg")}'
                img src='#{image_path("homepage/fp-style-icon/fp-style-icon-1.jpg")}' srcset='
                  #{image_path("homepage/fp-style-icon/fp-style-icon-1-mob.jpg")} 1023w,
                  #{image_path("homepage/fp-style-icon/fp-style-icon-1-retina.jpg")} 1024w' alt="F&P Style Icon"

    .tag-info-section
      .tag-info-wrapper.visible-lg-block
        .tag-info
          .section-name.vertical-text Our Edits
          .diagonal-line

      .row
        .col-md-6.cta-item
          = link_to 'dresses/slip-dress'
            .section-img-wrap.copy-center
              picture
                .img-wrap
                  source media='(max-width: 1023px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-2-mob.jpg")}'
                  source media='(min-width: 1024px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-2-retina.jpg")}'
                  img src='#{image_path("homepage/fp-style-icon/fp-style-icon-2.jpg")}' srcset='
                    #{image_path("homepage/fp-style-icon/fp-style-icon-2-mob.jpg")} 1023w,
                    #{image_path("homepage/fp-style-icon/fp-style-icon-2-retina.jpg")} 1024w' alt="Shop Our Slip Dress"

              .content-wrap
                .container-cta
                  .row-cta
                    .col-md-12
                      .copy-wrap.text-center
                        span.cta-link-white-bg
                          span.cta-link Shop
                          span.copy-highlight  Our Slip Dress Edit

        .col-md-6.cta-item
          = link_to 'dresses/ball-gowns'
            .section-img-wrap.copy-center
              picture
                .img-wrap
                  source media='(max-width: 1023px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-3-mob.jpg")}'
                  source media='(min-width: 1024px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-3-retina.jpg")}'
                  img src='#{image_path("homepage/fp-style-icon/fp-style-icon-3.jpg")}' srcset='
                    #{image_path("homepage/fp-style-icon/fp-style-icon-3-mob.jpg")} 1023w,
                    #{image_path("homepage/fp-style-icon/fp-style-icon-3-retina.jpg")} 1024w' alt="Shop Our Gown"

              .content-wrap
                .container-cta
                  .row-cta
                    .col-md-12
                      .copy-wrap.text-center
                        span.cta-link-white-bg
                          span.cta-link Shop
                          span.copy-highlight  Our Gown Edit

      .row
        .col-md-6.cta-item
          = link_to '/dresses/cocktail'
            .section-img-wrap.copy-center
              picture
                .img-wrap
                  source media='(max-width: 1023px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-4-mob.jpg")}'
                  source media='(min-width: 1024px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-4-retina.jpg")}'
                  img src='#{image_path("homepage/fp-style-icon/fp-style-icon-4.jpg")}' srcset='
                    #{image_path("homepage/fp-style-icon/fp-style-icon-4-mob.jpg")} 1023w,
                    #{image_path("homepage/fp-style-icon/fp-style-icon-4-retina.jpg")} 1024w' alt="Shop Our Cocktail"

              .content-wrap
                .container-cta
                  .row-cta
                    .col-md-12
                      .copy-wrap.text-center
                        span.cta-link-white-bg
                          span.cta-link Shop
                          span.copy-highlight  Our Cocktail Edit

        .col-md-6.cta-item
          = link_to 'dresses/wedding'
            .section-img-wrap.copy-center
              picture
                .img-wrap
                  source media='(max-width: 1023px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-5-mob.jpg")}'
                  source media='(min-width: 1024px)' srcset='#{image_path("homepage/fp-style-icon/fp-style-icon-5-retina.jpg")}'
                  img src='#{image_path("homepage/fp-style-icon/fp-style-icon-5.jpg")}' srcset='
                    #{image_path("homepage/fp-style-icon/fp-style-icon-5-mob.jpg")} 1023w,
                    #{image_path("homepage/fp-style-icon/fp-style-icon-5-retina.jpg")} 1024w' alt="Shop Our Wedding"

              .content-wrap
                .container-cta
                  .row-cta
                    .col-md-12
                      .copy-wrap.text-center
                        span.cta-link-white-bg
                          span.cta-link Shop
                          span.copy-highlight  Our Wedding Edit

  // Section: Styling
  section.section-box.container.section-styling

    .tag-info-section
      .tag-info-wrapper.visible-lg-block
        .tag-info
          .section-name.vertical-text.extra-margin-left Curated Collections
          .diagonal-line

      .row
        .col-md-6
          .item
            h3 Welcome to the F&P shopping experience: collections curated specifically for you, based on your personal style, preferred fit, and inspirations.
            p Launching soon, our Style Quiz and Fit Finder features will give us the tools to create a custom collection that speaks to you. Until then, get advice from a style expert anytime through Live Chat.

            = link_to 'javascript:;', onclick: '$zopim.livechat.window.show();'
              span.btn-xs.btn-featured
                | Start <span class="copy-highlight">Chatting</span>

        .col-md-6
          .item.bordered.item-alt.styling-session
            .row
              .col-lg-6.col-md-5
                = link_to styling_session_path
                  = image_tag 'homepage/styling/styling-session.jpg', :class => 'img-responsive hidden-xs hidden-sm'

              .col-lg-6.col-md-7
                .item-copy
                  h3 Styled by Fame <br class="hidden-xs hidden-sm">— for free.
                  p Our wardrobe stylist Amber Bond is ready to style you via chat, phone or video call.
                  = link_to styling_session_path
                    span.cta-link-arrow-right
                      span.cta-link-alt
                        span Book a
                        span.copy-highlight  Free Styling Session
                      i.icon.icon-arrow-right

                  = link_to styling_session_path
                    = image_tag 'homepage/styling/styling-session.jpg', :class => 'img-responsive hidden-md hidden-lg'

  // Section: Instagram
  section.container
    .row
      .col-md-12.heading-overlay-wrapper
        h2.heading-overlay Get Social

  .section-wrapper
    .section-box.section-instagram
      .container
        .row

        .tag-info-section
          .tag-info-wrapper.visible-lg-block
            .tag-info
              .section-name.vertical-text Get Social
              .diagonal-line

          .instagram-widget

            // Instagram Item
            .item.col-md-5ths.col-xs-6
              = link_to '/dresses/dress-kai-1042?color=pale-pink', class: 'item-wrap'
                .media-wrap
                  = image_tag 'homepage/get-social/instagram-1.jpg', :class => 'img-responsive'
                  .overlay
                    .overlay-outer-wrap
                      .overlay-inner-wrap
                        span.cta-instagram
                          span.user @jessalizzi
                          span.cta-link shop

            // Instagram Item
            .item.col-md-5ths.col-xs-6
              = link_to '/dresses/dress-firefly-640?color=black', class: 'item-wrap'
                .media-wrap
                  = image_tag 'homepage/get-social/instagram-2.jpg', :class => 'img-responsive'
                  .overlay
                    .overlay-outer-wrap
                      .overlay-inner-wrap
                        span.cta-instagram
                          span.user @lainyhedaya
                          span.cta-link shop

            // Instagram Item
            .item.col-md-5ths.col-xs-6
              = link_to '/dresses/dress-lovelight-two-piece-860?color=ivory', class: 'item-wrap'
                .media-wrap
                  = image_tag 'homepage/get-social/instagram-3.jpg', :class => 'img-responsive'
                  .overlay
                    .overlay-outer-wrap
                      .overlay-inner-wrap
                        span.cta-instagram
                          span.user @samblacky
                          span.cta-link shop

            // Instagram Item
            .item.col-md-5ths.col-xs-6
              = link_to '/dresses/dress-midnight-eyes-778?color=white', class: 'item-wrap'
                .media-wrap
                  = image_tag 'homepage/get-social/instagram-4.jpg', :class => 'img-responsive'
                  .overlay
                    .overlay-outer-wrap
                      .overlay-inner-wrap
                        span.cta-instagram
                          span.user @carodaur
                          span.cta-link shop

            // Instagram Item
            .item.col-md-5ths.hidden-sm.hidden-xs
              = link_to '/dresses/dress-flynn-1044?color=black', class: 'item-wrap'
                .media-wrap
                  = image_tag 'homepage/get-social/instagram-5.jpg', :class => 'img-responsive'
                  .overlay
                    .overlay-outer-wrap
                      .overlay-inner-wrap
                        span.cta-instagram
                          span.user @kirstenanderton
                          span.cta-link shop

        .row
          .col-md-12.text-center
            = link_to shop_social_path
                span.btn-xs.btn-featured
                  | Shop <span class="copy-highlight">Instagram</span>


  // Section: Social networks
  section.section-box.container.section-social.same-height-cols
    .row
      .col-md-6.copy-img-side-by-side
        .item.bordered.item-alt.section-facebook
          .row
            .col-sm-5.copy-side
              .content-wrapper
                p Like us on #{link_to "facebook", "https://www.facebook.com/FameandPartners", target:"_blank"} and be the first to hear about exclusive sales and events.

                .link-align-bottom
                  = link_to 'https://www.facebook.com/FameandPartners', target: '_blank'
                    span.cta-link-arrow-right
                      span.cta-link Explore
                      span.copy-highlight  Facebook
                      i.icon.icon-arrow-right

            .col-sm-7.img-side
              = link_to 'https://www.facebook.com/FameandPartners', target: '_blank'
                = image_tag 'homepage/social-cards/facebook.jpg', :class => 'img-responsive'

      .col-md-6.copy-img-side-by-side
        .item.bordered.item-alt.section-tumblr
          .row
            .col-sm-5.copy-side
              .content-wrapper
                p Check out #{link_to "tumblr", "https://fameandpartners.tumblr.com/", target:"_blank"} to see what’s inspiring us and our dress collections.

                .link-align-bottom
                  = link_to 'http://fameandpartners.tumblr.com/', target: '_blank'
                    span.cta-link-arrow-right
                      span.cta-link Explore
                      span.copy-highlight  Tumblr
                      i.icon.icon-arrow-right

            .col-sm-7.img-side
              = link_to 'http://fameandpartners.tumblr.com/', target: '_blank'
                = image_tag 'homepage/social-cards/tumblr.jpg', :class => 'img-responsive'
