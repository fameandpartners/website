  // Section: F&P Story
  section.section-box.container#fp-story
    .row
      .col-md-12.heading-overlay-wrapper
        h2.heading-overlay The Fame Story
    .same-height-cols
      .row
        .col-md-4
          .item.bordered
            h3 Here is some copy about why you will <em>love</em> us and our product.
            h4 A little bit of additional copy here
            = image_tag 'homepage/fame-story/fame-story-1.jpg', :class => 'img-responsive'

        .col-md-4
