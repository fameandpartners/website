  def tile_responsive_classes(currentTile)
    (currentTile == @instaTiles.last) ? {class: 'hidden-sm hidden-xs'} : {class: 'col-xs-6'}
  end

// Section: Instagram
section.container
  .row
    .col-md-12.heading-overlay-wrapper
      h2.heading-overlay Get Social

.section-wrapper
  .section-box.section-instagram.sectionBox--with-bg
    .container
      .row

      .tag-info-section
        .tag-info-wrapper.visible-lg-block
          .tag-info
            .section-name.vertical-text Get Social
            .diagonal-line

        .instagram-widget

          // Instagram Items fetched via Contentful
          - @instaTiles = contentful.entries(content_type: 'homePageContainer')[0].instagram_thumbnails_container
          - @instaTiles.each do |tile|
            .item.col-md-5ths*tile_responsive_classes(tile)
              = link_to tile.path_link, class: "item-wrap"
                .media-wrap
                  img.img-responsive*{src: tile.image.image_url }
                  .overlay
                    .overlay-outer-wrap
                      .overlay-inner-wrap
                        span.cta-instagram
                          span.user = tile.handle
                          span.cta-link shop

      .row
        .col-md-12.text-center
          = link_to shop_social_path + "?hp"
              span.btn-xs.btn-featured
                | Shop <span class="copy-highlight">Instagram</span>
