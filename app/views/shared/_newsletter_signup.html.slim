javascript:
  var close = false;
  var campaign = 'home'

  if (window.location.pathname == '/fashionista2014' || window.location.pathname == '/au/fashionista2014'){
    campaign = 'fashionista'
  }

  $(function () {
      $('#subForm').submit(function (e) {
          e.preventDefault();
          $.getJSON(
          this.action + "?callback=?",
          $(this).serialize(),
          function (data) {
              if (data.Status === 400) {
                  msg = data.Message;
                  $('#sub-success .heading').text("Something went wrong!");
                  $('.form .holder form').hide();
                  $('#sub-success .msg').text(msg);
                  $('#sub-success').show();
                  $('#sub-success').delay(2000).fadeOut(300);
                  $('.form .holder form').delay(2000).fadeIn(300);
                  window.track.event('Newsletter', 'Error', campaign)
              } else { // 200
                  msg = "Thanks for signing up. Use this promocode for $25 off your purchase: NEWS25." + data.Message;
                  $('.form .holder form').hide();
                  $('#sub-success .heading').text("Thanks for signing up! PROMOCODE: NEWS25");
                  $('#sub-success .msg').text(msg);
                  $('#sub-success').show();
                  $('.form').delay(6000).fadeOut(300);
                  $.cookie('slide_newsletter', 'close', { expires: 365, path: '/' })
                  window.track.event('Newsletter', 'Submitted', campaign)
              }
          });
      });
  });

  $(document).ready(function() {
      $('#fieldqulir').val(window.current_site_version.permalink);

      if ((window.current_page == 'index' || window.location.pathname == '/fashionista2014' || window.location.pathname == '/au/fashionista2014') && $.cookie('slide_newsletter') != 'close'){
        $('.form').addClass('form-fixed');
        $('.form').delay(2000).slideDown(1000);
        window.track.event('Newsletter', 'Opened', campaign)
        
        $('.form .close').click(function () {
          $('.form').removeClass('form-fixed');
          close = true
          $.cookie('slide_newsletter', 'close', { expires: 365, path: '/' })
          window.track.event('Newsletter', 'Closed', campaign)
        });

        var navpos = $('.nav-container').offset();
        console.log(navpos.top);
        $(window).bind('scroll', function() {
          if ($(window).scrollTop() < (navpos.top+300) && close == false){
            $('.form').addClass('form-fixed');
          }
          else {
            $('.form').removeClass('form-fixed');
          }
        });
      } else {
        $('.form').removeClass('form-fixed');
        $('.form').show();
      }        
  });