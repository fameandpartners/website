.tabs.vertical.js-tabs-home-collection

  ul
    li.active
      .inner-wrap
        a href='#collection1' data-toggle="tab" Pass The Mimosa Collection
    li
      .inner-wrap
        a href='#collection2' data-toggle="tab" Partners in Crime Collection
    li
      .inner-wrap
        a href='#collection3' data-toggle="tab" Just The Girls Collection

  .tab-wrap
    = link_to pass_the_mimosa_collection_path, id: 'collection1', class: 'tab active'
      = image_tag 'home-page-tiles/CollectionMenu-PASS_THE_MIMOSA.jpg', alt: 'Pass The Mimosa Collection'
    = link_to partners_in_crime_collection_path, id: 'collection2', class: 'tab'
      = image_tag 'home-page-tiles/CollectionMenu-PIC.jpg', alt: 'Partners in Crime Collection'
    = link_to just_the_girls_collection_path, id: 'collection3', class: 'tab'
      = image_tag 'home-page-tiles/tab-collectionbox-7.jpg', alt: 'Just The Girls Collection'
    

    a.navigator.btn-prev.js-navigator-prev href='javascript:void(0)'
      .icon.icon-arrow-left
      .hide-visually Previous tab
    a.navigator.btn-next.js-navigator-next href='javascript:void(0)'
      .icon.icon-arrow-right
      .hide-visually Next tab
