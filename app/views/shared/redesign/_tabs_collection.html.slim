.tabs.vertical.js-tabs-home-collection

  ul
    li.active
      .inner-wrap
        a href='#collection1' data-toggle="tab" Make a Statement Collection
    li
      .inner-wrap
        a href='#collection2' data-toggle="tab" Luxe Collection
    li
      .inner-wrap
        a href='#collection3' data-toggle="tab" Here comes the Sun Collection

  .tab-wrap
    = link_to make_a_statement_collection_path, id: 'collection1', class: 'tab active'
      = image_tag 'home-page-tiles/tab-collectionbox-1.jpg', alt: 'Make a Statement Collection'
    = link_to luxe_collection_path, id: 'collection2', class: 'tab'
      = image_tag 'home-page-tiles/tab-collectionbox-2.jpg', alt: 'Luxe Collection'
    = link_to here_comes_the_sun_collection_path, id: 'collection3', class: 'tab'
      = image_tag 'home-page-tiles/tab-collectionbox-3.jpg', alt: 'Here comes the Sun Collection'
    a.navigator.btn-prev.js-navigator-prev href='javascript:void(0)'
      .icon.icon-arrow-left
      .hide-visually Previous tab
    a.navigator.btn-next.js-navigator-next href='javascript:void(0)'
      .icon.icon-arrow-right
      .hide-visually Next tab
