    source media="(max-width: 991px)" srcset="#{image_path(current_tile_image_mob)}"
    source media="(min-width: 992px)" srcset="#{image_path(current_tile_image)}"
    img src="#{image_path(current_tile_image)}" srcset="
      #{image_path(current_tile_image_mob)} 991w,
      #{image_path(current_tile_image)} 992w"

  .content-wrap
    .container-fluid
      .row
        .col-md-3.col-md-offset-1
          .copy-wrap
            h2.heading.no-margin-md
              span The <br class="visible-lg">INSIDE\OUT <br class="visible-lg">Collection
              span.sub-heading
                | Fashion that stands for something. Fashion to make you feel beautiful from the inside out.
            .cta-wrapper
              span.btn-md.btn-featured
                | Dress up and <span class="copy-highlight">give back</span>

