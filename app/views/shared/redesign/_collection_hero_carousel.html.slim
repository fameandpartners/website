- current_tile_image = "homepage/hero-featured/nov-18-featured-1.jpg"
- current_tile_image_mob = "homepage/hero-featured/nov-18-featured-1-mob.jpg"
= link_to inside_out_page_path, class: "main-hero-wrap hero-wrap copy-left", data: { description: "The INSIDE/OUT Collection" }
