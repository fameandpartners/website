- current_tile_image_mob = "homepage/hero-featured/march-02-featured-2-mob.jpg"
= link_to bespoke_bridal_collection_landing_page_path + "?hp", class: "main-hero-wrap hero-wrap copy-left", data: { description: "Bespoke Bridal Collection" }
