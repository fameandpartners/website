// HOMEPAGE HERO CAROUSEL

// Carousel Item 1
- current_tile_image = "homepage/hero-featured/sept-8-featured-1.jpg"
- current_tile_image_mob = "homepage/hero-featured/sept-8-featured-1-mob.jpg"

= link_to gown_collection_landing_page_path, class: "main-hero-wrap hero-wrap copy-left white-text", data: { description: "The Gown Collection" }
  picture.media-wrap
    source media="(max-width: 1023px)" srcset="#{image_path(current_tile_image_mob)}"
    source media="(min-width: 1024px)" srcset="#{image_path(current_tile_image)}"
    img src="#{image_path(current_tile_image)}" srcset="
      #{image_path(current_tile_image_mob)} 1023w,
      #{image_path(current_tile_image)} 1024w"

  .content-wrap
    .container
      .row
        .col-md-4.col-lg-3
          .copy-wrap
            h2.heading.no-margin-md
              span The Gown Collection.
              span.sub-heading
                | The only place where you can <br class="hidden-lg hidden-md hidden-sm"><span>co-design the perfect gown.<span>
            .cta-wrapper
              span.btn-md.btn-featured
                | Design <span class="copy-highlight">YOUR DRESS</span>

