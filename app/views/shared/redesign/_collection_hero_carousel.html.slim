// TEMPORARY HERO CAROUSEL FOR EQUAL PAY DAY
- if current_site_version.is_usa? && Time.zone.now.between?(DateTime.parse('Apr 4 0:00am -7:00'), DateTime.parse('Apr 5 0:00am -7:00'))

  // Carousel Item 1
  - current_tile_image = "homepage/hero-featured/equal-pay-featured-1.jpg"
  - current_tile_image_mob = "homepage/hero-featured/equal-pay-featured-1-mob.jpg"
  = link_to dresses_path + "?hpbanner1", class: "main-hero-wrap hero-wrap copy-left", data: { description: "21% off everything. Today only." }
    picture.media-wrap
      source media="(max-width: 991px)" srcset="#{image_path(current_tile_image_mob)}"
      source media="(min-width: 992px)" srcset="#{image_path(current_tile_image)}"
      img src="#{image_path(current_tile_image)}" srcset="
        #{image_path(current_tile_image_mob)} 991w,
        #{image_path(current_tile_image)} 992w"

    .content-wrap
      .container-fluid
        .row
          .col-lg-5.col-md-6.col-md-offset-1
            .copy-wrap
              h2.heading.no-margin-md
                span.title.title--large 21% off <em>everything</em>.<br class="hidden-xs hidden-sm"> Today only.
                span.sub-heading
                  | In honor of Equal Pay Day, let's fight the<br class="hidden-xs hidden-sm"> 21% wage gap and look fierce while doing it.
              .cta-wrapper
                span.btn-md.btn-featured
                  | Shop <span class="copy-highlight">NOW</span>


  // Carousel Item 2
  - current_tile_image = "homepage/hero-featured/equal-pay-featured-2.jpg"
  - current_tile_image_mob = "homepage/hero-featured/equal-pay-featured-2-mob.jpg"
