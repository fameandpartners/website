// Carousel Item 1
- current_tile_image = "homepage/hero-featured/may-05-featured-1.jpg"
- current_tile_image_mob = "homepage/hero-featured/may-05-featured-1-mob.jpg"
= link_to dresses_path + "?hpbanner1", class: "main-hero-wrap hero-wrap copy-left", data: { description: "Modern Evening Collection" }
  picture.media-wrap
    source media="(max-width: 991px)" srcset="#{image_path(current_tile_image_mob)}"
    source media="(min-width: 992px)" srcset="#{image_path(current_tile_image)}"
