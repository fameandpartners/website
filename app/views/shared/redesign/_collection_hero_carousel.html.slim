// HOMEPAGE HERO CAROUSEL

// Carousel Item 1
- current_tile_image = "homepage/hero-featured/march-02-featured-1.jpg"
- current_tile_image_mob = "homepage/hero-featured/march-02-featured-1-mob.jpg"
= link_to the_evening_shop_landing_page_path + "?hp", class: "main-hero-wrap hero-wrap copy-left white-text", data: { description: "The Evening Shop" }
  picture.media-wrap
    source media="(max-width: 991px)" srcset="#{image_path(current_tile_image_mob)}"
    source media="(min-width: 992px)" srcset="#{image_path(current_tile_image)}"
    img src="#{image_path(current_tile_image)}" srcset="
      #{image_path(current_tile_image_mob)} 991w,
      #{image_path(current_tile_image)} 992w"

  .content-wrap
    .container-fluid
      .row
        .col-md-6.col-md-offset-5
          .copy-wrap.extra-padding-left
            h2.heading.no-margin-md
              span.title.title--large The Evening <em>Shop</em>.
              span.sub-heading
                | Custom evening wear, made-to-order. <br>Because ball gowns are not meant to blend in.
              span.sub-heading
                | <em class="link-underline">Explore</em> evening.

