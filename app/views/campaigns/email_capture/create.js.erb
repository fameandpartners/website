<% if @participation.valid? %>
  $.cookie('email_capture', 'hide', { expires: 365, path: '/' });
  $scope = $('.modal.popup-placeholder.birthday-popup .modal-form');
  $scope.html('<%=j render('campaigns/email_capture/thanks') %>');
<% else %>
  $scope = $('.modal.popup-placeholder.birthday-popup .modal-form');
  $scope.html('<%=j render('campaigns/email_capture/form') %>');
<% end %>
