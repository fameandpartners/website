ruby:

  site_title = get_title()
  site_description = truncate(get_meta_description, length:140)


title = site_title
meta name="description" content= site_description
meta charset="utf-8"
meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"

= render 'fame_favicon/links'

= stylesheet_link_tag 'shopping_spree'

link rel="canonical" href=get_canonical_href

= render :partial => '/layouts/redesign/hreflang'

/ TODO: should be provided through ENV vars
meta property="fb:app_id" content=get_facebook_app_id
meta property="og:title" content=get_title
meta property="og:url" content=get_canonical_href
meta property="og:description" content=truncate(get_meta_description, length:140)
meta property="og:site_name" content="Fame and Partners"

meta name="p:domain_verify" content="bca305b234684f817b52dc0131747eb6"

script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"

- if !Rails.env.production?
  meta name="robots" content="noindex, nofollow"

- if Rails.env.production? || Features.active?(:test_analytics, current_spree_user)
  = render '/layouts/custom_experience/marketing/sync_trackers'

= render '/layouts/custom_experience/marketing/structured_data_markup'

/[if lt IE 9]
  = javascript_include_tag 'html5.js'
= yield :head
