<script type="text/javascript">
  var _cio = _cio || [];

  (function() {
    var a,b,c;a=function(f){return function(){_cio.push([f].
    concat(Array.prototype.slice.call(arguments,0)))}};b=["identify",
    "track"];for(c=0;c<b.length;c++){_cio[b[c]]=a(b[c])};
    var t = document.createElement('script'),
        s = document.getElementsByTagName('script')[0];
    t.async = true;
    t.id    = 'cio-tracker';
    t.setAttribute('data-site-id', '<%= configatron.customerio.site_id %>');
    t.src = 'https://assets.customer.io/assets/track.js';
    s.parentNode.insertBefore(t, s);
  })();
</script>

<% if current_spree_user %>
<script type="text/javascript">
  _cio.identify({
    id: <%= current_spree_user.id %>,
    email: '<%= current_spree_user.email %>',
    created_at: <%= current_spree_user.created_at.to_i %>,
    first_name: '<%= current_spree_user.first_name %>',
    last_name: '<%= current_spree_user.last_name %>',
    site_version: '<%= current_site_version.code %>',
  });
</script>
<% end %>
