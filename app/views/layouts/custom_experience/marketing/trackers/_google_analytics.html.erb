<% if tracker = Spree::Tracker.current %>
  <%= javascript_tag do %>
    <% if flash[:signed_up_just_now] %>
        dataLayer.push({event: "User Signed Up", eventDetail: {category: "User"}});
    <% end %>

    <% if flash[:track_fb_reminder_promo] %>
      dataLayer.push({event: "FB Reminder Promo Scheduled", eventDetail: {category: "User"}});
    <% end %>

    <% if flash[:track_fb_signin] %>
      dataLayer.push({event: "User Signed In", eventDetail: {category: "User", label: "Facebook"}});
    <% end %>

    <% if flash[:track_fb_signup] %>
      dataLayer.push({event: "User Signed Up", eventDetail: {category: "User", label: "Facebook"}});
    <% end %>
  <% end %>
<% end %>

