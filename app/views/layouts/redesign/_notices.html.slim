
#sale-banner.alert-sale role="alert"
  .outer-wrap
    - if sale_active?
      .inner-wrap
        .title-wrap
          .title
            = current_sale.try(:sitewide_message)
            br
            = link_to 'Shop now!', sale_path
    
/ TODO - Refactor how we apply email reminders
- if Features.active?(:send_promotion_email_reminder)
  - if automatic_discount_code.present? && session[:email_reminder_promo] != 'scheduled_for_delivery'
    .auto-discount-applied
      .text-center
        p WANT TO SHOP LATER?
        = link_to 'Email your promo code', fb_auth_path(email_reminder_promo: automatic_discount_code), class: 'btn btn-facebook btn-md'
