      cart:         window.app.shopping_cart,
      overlay:      '#shadow-layer',
      container:    '#cart',
      toggle_link:  '.js-header-toolbar .js-trigger-shopping-bag',
      auto_open:    /open_cart=true/.test(window.location.search),
