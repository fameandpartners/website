title = get_title
meta name="description" content=(get_meta_description)
meta charset="utf-8"
meta name="viewport" content="width=device-width"

= render 'fame_favicon/links'

link rel="canonical" href=get_canonical_href

link rel="alternate" hreflang="en-US" href=get_hreflang(:us)
link rel="alternate" hreflang="en-AU" href=get_hreflang(:au)

meta property="og:title" content=get_title
meta property="og:url" content=get_canonical_href
meta property="og:description" content=truncate(get_meta_description, length:140)

meta property="og:site_name" content="Fame &amp; Partners"

= render :partial => 'shared/sharethis'
= render :partial => 'shared/typekit'

- if !Rails.env.production?
  meta name="robots" content="noindex, nofollow"

- if Rails.env.production? || Features.active?(:test_analytics, current_spree_user)
  = render '/shared/customerio'
  = render '/spree/shared/google_analytics'
  = render '/shared/zopim'
  = render '/shared/hotjar'

/[if lt IE 9]
  = javascript_include_tag 'html5.js'

/[if IE]
  = stylesheet_link_tag 'ie'

= yield :head
