<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-beta.3/js/select2.min.js"></script>

<!-- bootstrap -->
<script type="text/javascript">
  moodboard_data  = <%= raw current_user_moodboard.serialize.to_json %>;
  
  window.app = {
    env:    '<%= Rails.env %>',
    debug:  <%= Rails.env.development? %>,
    user:   { id: <%= current_spree_user.present? ? current_spree_user.id : 'null' %> },
    user_signed_in: <%= signed_in? %>,
    site_version: {  name: '<%= current_site_version.try(:name) %>' },
    shopping_cart: new helpers.ShoppingCart({}),
    user_moodboard: new helpers.UserMoodboard({})
  };

  $(document).ready(function() {
    (function() {
      <%= yield :inline_javascript %>

      // init here allows assigned listeners to update data
      window.app.user_moodboard.updateData(moodboard_data);
      window.app.shopping_cart.setItemCount(<%= current_order.item_count %>);
    })();    
    //page.enableStyleQuizPopup('.show-style-quiz');
  });
</script>
