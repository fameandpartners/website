<script type="text/javascript">
  window.bootstrap = {};
  window.bootstrap.order = <%=raw ::CartSerializer.new(current_order).to_json %>

  <% if spree_user_signed_in? %>
    window.bootstrap.wishlist_items = <%=raw try_spree_current_user.wishlist_items.map{|i| WishlistItemSerializer.new(i).attributes }.to_json %>
    window.current_user = <%= raw serialized_current_user.to_json %>

    window.bootstrap.reservations = <%= raw try_spree_current_user.reservations.map{|i| ProductReservationSerializer.new(i).attributes }.to_json %>
  <% end %>

  <% if current_site_version %>
    window.current_site_version = <%= raw SiteVersionSerializer.new(current_site_version).to_json %>
  <% end %>
</script>
