<div class="section-row tile is-ancestor">

  <div class="tile is-vertical is-6">

    <div class="tile is-parent">
      <article class="tile is-child">
        <%= render partial: "layouts/contentful/modules/items/#{contents[:md_item][:id]}" %>
      </article>
    </div>

    <div class="tile is-parent is-hidden-mobile">
      <div class="columns is-mobile">
      <% contents[:sm_items].each_with_index do |item,index| %>
        <% @pid = item %>
        <div class="column product-top-margin no-margin-bottom">
          <%= render partial: "layouts/contentful/modules/items/ITEM--sm", locals: {contents: contents, pid_index: (index.to_i + 1)} %>
        </div>
      <% end %>
      </div>
    </div>

  </div>

  <div class="tile is-parent is-6">
    <article class="tile is-child">
      <div class="Editorial">
        <%= render partial: "layouts/contentful/modules/items/ITEM--lg", locals: {contents: contents} %>
      </div>
    </article>
  </div>

  <div class="tile is-parent is-12 is-hidden-tablet">
    <div class="columns is-mobile">
    <% contents[:sm_items].each_with_index do |item,index| %>
      <% @pid = item %>
      <div class="column">
        <%= render partial: "layouts/contentful/modules/items/ITEM--sm", locals: {contents: contents, pid_index: (index.to_i + 1)} %>
      </div>
    <% end %>
    </div>
  </div>

</div>
