<% item_url = remove_link_media == false ? item_url : nil  %>
<%= link_to_if_with_block item_url.present?, item_url do %>

  <% # Desktop media %>
  <% if item_video.present? %>
    <video src="<%= item_video %>"
      class="js-autoload-video Editorial__video <%= item_video_mobile.present? || item_image_mobile.present? ? 'is-hidden-mobile' : nil %>"
      muted
      playsinline
      webkit-playsinline
      preload
      autoplay
      loop
      aria-hidden="false"
      poster="<%= item_image %>">
    </video>
  <% else %>
    <img src="<%= item_image %>" class="Editorial__image is-hidden-mobile">
  <% end %>

  <% # Mobile media %>
  <% if item_video_mobile.present? %>
    <video src="<%= item_video_mobile %>"
      class="js-autoload-video Editorial__video <%= item_video.present? || item_image.present? ? 'is-hidden-tablet' : nil %>"
      muted
      playsinline
      webkit-playsinline
      preload
      autoplay
      loop
      aria-hidden="false"
      poster="<%= item_image_mobile %>">
    </video>
  <% else %>
    <img src="<%= item_image_mobile %>" class="Editorial__image is-hidden-tablet">
  <% end %>

<% end %>
