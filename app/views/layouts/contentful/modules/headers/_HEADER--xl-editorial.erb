<% @lg_contents = contents %>
<div class="section-row columns">
  <div class="column is-full">
    <div class="Editorial Editorial--featured <%= contents[:full_width_content_class] %>">
      <% if contents[:live_text] %>
        <div class="u-overlay-area">
          <div class="u-overlay-area__media">
            <%= render partial: "layouts/contentful/modules/items/ITEM--lg" %>
          </div>
          <div class="u-overlay-area__overlay">
            <div class="u-overlay-area__caption u-overlay-area__caption--center">
              <div class="Editorial__liveText">
                <%= contents[:live_text] %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <%= render partial: "layouts/contentful/modules/items/ITEM--lg" %>
      <% end %>

    <% if contents[:bottom_caption] && contents[:bottom_caption_url] %>
      <% caption_array = contents[:bottom_caption].split('/') %>
      <div class="Editorial__bottomCaption">
        <% if caption_array.size > 1 %>
          <a href="<%= contents[:bottom_caption_url] %>">
            <span class="Editorial__bottomCaptionBlocks"><%= caption_array[0] %></span> / <span class="Editorial__bottomCaptionBlocks link-underline"><%= caption_array[1] %></span>
          </a>
        <% else %>
        <%= link_to contents[:bottom_caption], contents[:bottom_caption_url], class: "link-underline" %>
        <% end %>
      </div>
    <% end %>

    </div>
  </div>
</div>
