    .col-md-3.hidden-sm.hidden-xs
      = link_to dresses_path + '/dress-roxette-809?color=blue-fallen-leaves', class: 'media-wrap'
        = image_tag 'landingpages/advertising/ad4-pic3.jpg', alt:'SHOP THIS LOOK'

coffee:
  $(window).load ->
    $('.ad-carousel').slick({
      autoplay: true,
      autoplaySpeed: 8000,
      speed: 1500,
      fade: true,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            speed: 800,
            fade: false,
            arrows: true,
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
