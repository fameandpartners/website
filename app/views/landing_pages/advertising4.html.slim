            = image_tag"landingpages/advertising/ad4-slide2.jpg"
          .media-wrap
            = image_tag"landingpages/advertising/ad4-slide3.jpg"
          .media-wrap
            = image_tag"landingpages/advertising/ad4-slide4.jpg"
          .media-wrap
            = image_tag"landingpages/advertising/ad4-slide5.jpg"
          .media-wrap
            = image_tag"landingpages/advertising/ad4-slide6.jpg"
          .media-wrap
            = image_tag"landingpages/advertising/ad4-slide7.jpg"
          .media-wrap
            = image_tag"landingpages/advertising/ad4-slide8.jpg"

  .row
    .col-md-12
      h2.fomular-header.text-center BRIDESMAID DRESSES
      h3.fomular-body.text-center Make sure your #girlsquad doesn’t regret the photos. Shop hundreds of chic, customisable styles at Fame and Partners now.

  .row
    = render partial: 'products/collections/pick_products_without_content', locals: {rangeFrom: 0, rangeTo: 3, customWrapper: 'col-md-3 col-xs-6'}
