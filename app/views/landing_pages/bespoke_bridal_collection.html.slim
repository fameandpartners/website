= render partial: 'pages/robots'

.pageBespokeBridalCollection

  / Hero tile
  .contentBox.heroIntro
    .main-hero-wrap.hero-wrap.copy-left

      - tile_image_path = image_path("homepage/hero-featured/dec-09-featured-1.jpg")
      - tile_image_mob_path = image_path("homepage/hero-featured/dec-09-featured-1-mob.jpg")

      picture.media-wrap
        source media="(max-width: 991px)" srcset="#{tile_image_mob_path}"
        source media="(min-width: 992px)" srcset="#{tile_image_path}"
        img src="#{tile_image_path}" srcset="
          #{tile_image_mob_path} 991w,
          #{tile_image_path} 992w"

      .content-wrap
        .container-fluid
          .row
            .col-lg-4.col-lg-offset-6
              .copy-wrap.text-center.contentBox__extraPadding.contentBox__bg--white
                h2.heading
                  span.heroIntro__title <em>Bridal</em> <br class="visible-lg">like never before.
                  span.heroIntro__copy.sub-heading
                    | Introducing the Bespoke Bridal Collection. Customizable, exclusive designs made for the modern bride: elevated and elegant, with just a touch of irreverence.

