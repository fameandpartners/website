javascript:
  $(document).ready(function() {
    $('.js-datepicker').datepicker();
    
    // update progress bar
    $('[data-next-step]').on('click', function() {
      var step = $(this).data('next-step');
      $('.js-questions-count').html(step);
      $('.js-progress-bar').css({'width': (20 * step) + '%'});
    });
  });
