.wrap
  .account-pages
    .tabs
      = render 'users/shared/tabs', active_tab: 'orders'
      #orders.tab-content
        h1.page-title My Orders
        - if @orders.size == 0
          p You have no orders
        - else
          table.table-global
            thead
              tr
                th Order
                th Order date
                th Status
                th Payment state
                th Shipping state
                th Total
            tbody
              - @orders.each do |order|
                tr
                  td = link_to order.number, user_order_path(order), remote: true
                  td = l(order.updated_at.to_date)
                  td = order_state(order)
                  td = order_payment_state(order)
                  td = order_shipment_state(order)
                  td = order.display_total
