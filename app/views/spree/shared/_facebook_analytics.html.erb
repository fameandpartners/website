<%
  pixel_id ||= '0'
  value ||= '0.00'
  currency ||= 'AUD'
%>
<script type="text/javascript">
  var fb_param = {};
  fb_param.pixel_id = "<%= pixel_id %>";
  fb_param.value = "<%= value %>";
  fb_param.currency = "<%= currency %>";
  (function(){
    var fpw = document.createElement('script');
    fpw.async = true;
    fpw.src = '//connect.facebook.net/en_US/fp.js';
    var ref = document.getElementsByTagName('script')[0];
    ref.parentNode.insertBefore(fpw, ref);
  })();
</script>

<noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/offsite_event.php?id=<%=pixel_id%>&amp;value=<%= value %>&amp;currency=<%= currency %>" /></noscript>
