                      span
                      | Create an Account
            div data-step="personal" *{ :class => !active.eql?('personal') && 'hide' }
              = render 'spree/checkout/personal' if active.eql?('personal')
            
          .checkout-title.black data-step="address" *{ :class => active.eql?('address') && 'active' }
            h3 Billing and shipping Address
            .check-edit class="#{ @order.state.eql?('payment') ? "" : "hide" }"
              span.icon-checkmark
              = link_to 'Edit', checkout_state_path('address'), :remote => true, class: 'edit'
          div data-step="address" *{ :class => !active.eql?('address') && 'hide' }
            = render 'spree/checkout/address' if active.eql?('address') || active.eql?('payment')
          
          .checkout-title.grey data-step="payment"
