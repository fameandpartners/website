      .accordion-container.grid-8
        .checkout-section
          - unless signed_in?
            .checkout-title data-step="personal" *{ :class => active.eql?('personal') && 'active' }
              .fleft 
                h3 
                  ' GET $25 TO SPEND
                  em optional
              .fright 
                .use-same-address-block
