.payment-method-details
  .selector
    /input type="radio" name="cards"
    label Secure credit card payment
  .image = image_tag 'icons-cards.png', width: 176, height: 33, alt: 'Visa, MasterCard, Amex'
ruby:
  gateway_method = @order.available_payment_methods.detect{ |method| method.method_type.eql?('gateway') }
  paypal_method = @order.available_payment_methods.detect{ |method| method.method_type.eql?('paypalexpress') }
= form_for @order, :url => update_checkout_path(@order.state), :remote => true do |form|
  = render :partial => 'spree/shared/error_messages', :locals => { :target => @order }
  = hidden_field_tag "order[payments_attributes][][payment_method_id]", gateway_method.id
  = render :partial => "spree/checkout/payment/#{gateway_method.method_type}", :locals => { :payment_method => gateway_method }
