$('.checkout-step[data-name="<%= @order.state %>"]').
  html('<%=j render("/spree/checkout/#{@order.state}_step") %>');

if (window.checkout_page) {
  window.checkout_page.payment_request_in_process = false;
  window.checkout_page.pin_request_in_process = false;

  if (window.checkout_page.onAjaxFailureHandler) {
    window.checkout_page.onAjaxFailureHandler();
  }
}
