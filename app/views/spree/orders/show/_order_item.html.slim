.item
  .item-img.col-md-5
    = image_tag line_item.image_url, alt: line_item.style_name, class: 'img-responsive ordered-item-image'
  .details.col-md-7
    .row
      .name.col-md-8
        = line_item.style_name
      .price.col-md-4
        / TODO: If price is integer remove decimals
        = line_item.display_price
    .row
      .item-details.col-md-12
        ul
          li
          
          | #{height_title(line_item.personalization)}: <span class="value">#{display_height(line_item.personalization.height_value, line_item.personalization.height_unit, line_item.personalization.height)}</span>
          li
            - if line_item.personalization.try(:basic_color?)
              | Color:
            - else
              | Customized color:
            span.value= line_item.colour_name
          - if line_item.customisation_text.present?
            li
              | Customized cut: <span class="value">#{line_item.customisation_text}</span>
          li
            | Size: <span class="value">#{line_item.size_name}</span>
          li
            | Quantity: <span class="value">#{line_item.quantity}</span>
          li
            | Estimated Delivery: <span class="value">#{line_item.delivery_period}</span>
