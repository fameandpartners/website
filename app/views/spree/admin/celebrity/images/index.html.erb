<% content_for :page_actions do %>
  <div class="toolbar" data-hook="toolbar">
    <ul class="actions header-action-links inline-menu">
      <li id="new_celebrity_image_link">
        <%= button_link_to t(:new_image), new_admin_celebrity_image_path, :icon => 'icon-plus' %>
      </li>
      <li>
        &nbsp;
      </li>
      <li id="new_celebrity_link">
        <%= button_link_to t(:new_celebrity), new_admin_celebrity_path, :icon => 'icon-plus' %>
      </li>
      <li id="celebrities_link">
        <%= button_link_to t(:celebrities), admin_celebrities_path, :icon => 'icon-list' %>
      </li>
    </ul>
  </div>
<% end %>

<%= render :partial => 'spree/admin/shared/celebrities_tabs', :locals => { :current => 'Images' } %>

<% unless @celebrity.images.any? %>
  <div class="no-objects-found">
    <%= t(:no_images_found) %>.
  </div>
<% else %>
  <table class="index sortable" data-hook="images_table" data-sortable-link="<%= update_positions_admin_celebrity_images_path(@celebrity) %>">
    <colgroup>
      <col style="width: 5%">
      <col style="width: 10%">
      <col style="width: 45%">
      <col style="width: 15%">
    </colgroup>
    <thead>
      <tr data-hook="images_header">
        <th colspan="2"><%= t(:thumbnail) %></th>
        <th><%= t(:primary) %></th>
        <th class="actions">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @celebrity.images.each do |image| %>
        <tr id="<%= spree_dom_id image %>" data-hook="images_row" class="<%= cycle('odd', 'even')%>">
          <td class="no-border">
            <span class="handle"></span>
          </td>
          <td>
            <%= link_to image_tag(image.file.url(:thumbnail)), image.file.url(:large) %>
          </td>
          <td>
            <%= image.is_primary? ? 'Yes' : 'No' %>
          </td>
          <td class="actions">
            <%= link_to_with_icon 'icon-edit', t(:edit), edit_admin_celebrity_image_url(@celebrity, image), :no_text => true, :data => {:action => 'edit'} %>
            <%= link_to_delete image, { :url => admin_celebrity_image_path(@celebrity, image), :no_text => true } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
