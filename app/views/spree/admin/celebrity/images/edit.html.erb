<%= render :partial => 'spree/admin/shared/celebrities_tabs', :locals => { :current => 'Images' } %>

<% content_for :page_actions do %>
  <li><%= button_link_to t(:back_to_images_list), admin_celebrity_images_path(@celebrity), :icon => 'icon-arrow-left' %></li>
<% end %>

<%= form_for @image, as: :image, url: admin_celebrity_image_path(@celebrity, @image) , html: { multipart: true } do |f| %>
  <fieldset data-hook="edit_image">
    <legend align="center"><%= @image.file_file_name%></legend>
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label t(:thumbnail) %><br>
      <%= link_to image_tag(@image.file.url(:small)), @image.file.url(:product) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>  
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button t(:update), 'icon-refresh' %>
      <span class="or"><%= t(:or) %></span>
      <%= link_to t(:cancel), admin_celebrity_images_path(@celebrity), :id => 'cancel_link', :class => 'button icon-remove' %>
    </div>
  </fieldset>
<% end %>
