<% if item.persisted? %>
  new_item_html = '<%= escape_javascript(render 'spree/admin/inspirations/item', item: item) %>'
  $('table.index#inspirations tbody').append(new_item_html);

  $('.no-objects-found').remove()
  $('table.index#inspirations').show()

  <% item = product.inspirations.build %>
<% end %>

form_html = '<%= escape_javascript(render "spree/admin/inspirations/form", item: item, product: product) %>';
$("#new_inspiration").html(form_html);
