tr data-id="#{item.id}" id=( spree_dom_id item )
  td
    span.handle 
  td = item.active? ? 'Active' : 'Disabled'
  td = item.item_type
  td = image_tag(item.image.url(:thumbnail), height: '60', width: '80')
  td title="#{ item.content }"
      ' name:
      = item.name
      br
      'content:
      = truncate(item.content, length: 20)
  td
    = link_to "Edit", edit_admin_product_inspiration_url(product, item), remote: true
    br
    = link_to 'Delete', admin_product_inspiration_url(product, item), remote: true, method: 'delete'
