- if @post.present?
  - url = @blog_celebrity_photo.persisted? ? admin_blog_post_celebrity_photo_path(@post, @blog_celebrity_photo) : admin_blog_post_celebrity_photos_path(@post)
- elsif @celebrity.present?
  - url = @blog_celebrity_photo.persisted? ? admin_blog_celebrity_celebrity_photo_path(@celebrity, @blog_celebrity_photo) : admin_blog_celebrity_celebrity_photos_path(@celebrity)

= form_for(@blog_celebrity_photo, url: url, html: { multipart: true }) do |f|
  fieldset.no-border-top
    - if @celebrity.present?
      = f.field_container :post_slug do
        = f.label :post_slug, "Post Slug"
        br
        = f.text_field :post_slug, class: 'text', size: 50
    - elsif @post.present?
      = f.field_container :celebrity_slug do
        = f.label :celebrity_slug, "Celebrity Slug"
        br
        = f.text_field :celebrity_slug, class: 'text', size: 50

    = f.field_container :publish do
      = f.label :publish, "Publish"
      br
      = f.check_box :publish, class: 'text', size: 50

    = f.field_container :photo do
      = f.label :photo, "Photo"
      br
      = f.file_field :photo, class: 'file-field'
      br
      = f.error_message_on :photo
      br
        - if @blog_celebrity_photo.persisted? && @blog_celebrity_photo.photo.present?
          = image_tag @blog_celebrity_photo.photo.url, height: '300'

    = f.field_container :submit do
      = f.submit
      br
