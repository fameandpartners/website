<%= render partial: "spree/admin/shared/blog_sub_menu" %>

<%= link_to 'Add prom tip', new_admin_blog_prom_tip_path, class: 'button icon_link add-new-item' %>
<div class="blog_posts">
  <% @prom_tips.each do |tip| %>
    <div class="post">
      <h5 class="post-title"><%= tip.title %></h5>
      <%= link_to edit, edit_admin_blog_prom_tip_path(tip) %>
    </div>
  <% end %>
</div>

<%= render partial: "spree/admin/shared/no_items_found" unless @prom_tips.any? %>