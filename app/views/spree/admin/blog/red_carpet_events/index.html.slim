= render partial: "spree/admin/shared/blog_sub_menu"
- content_for :page_title do
  | Listing Posts

- content_for :page_actions do
  li
    = button_link_to "New Post", new_admin_blog_red_carpet_event_path, :icon => 'icon-plus', :id => 'admin_new_post'

- if @posts.present?
  table.index.blog_red_carpet_posts
    thead
      tr
        th Title
        th Occurred at / Publish Date
        th State
        th Created At
        th.actions
    tbody
      - @posts.each do |post|
        tr
          td= link_to post.title, edit_admin_blog_red_carpet_event_path(post)
          td= post.occured_at_formatted
          /- if can? :toggle_publish, post
            td[data-url="#{toggle_publish_admin_blog_red_carpet_event_path(post)}"]
              =' check_box_tag :published, '', post.published?
              = link_to '[Preview]', blog_red_carpet_post_url(post.slug, :host => configatron.blog_host), :target => :blank
          /- else
            td= post.state
          td Not available
          td= post.created_at_formatted
          td
            = link_to "", edit_admin_blog_red_carpet_event_path(post), class: "icon_link with-tip icon-edit no-text", "data-action" => "edit"
            | |
            = link_to "", admin_blog_red_carpet_event_path(post), method: :delete,  confirm: "Are you sure?", class: "icon_link with-tip icon-remove no-text", "data-action" => "delete"
- else
  = render partial: "spree/admin/shared/no_items_found"
= paginate @posts

javascript:
  $(function() {
    $('table.index.blog_red_carpet_posts input[type=checkbox]').on('click', function(e) {
      url = $(e.target).parent().attr('data-url');
      $.ajax({method: 'PUT', url: url});
    });
  });

