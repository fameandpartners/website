<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :page_title do %>
  <%= t(:editing_customisation_type) %> <span class="green">"<%= @customisation_type.name %>"</span>
<% end %>

<% content_for :page_actions do %>
  <li>
    <span id="new_add_customisation_value" data-hook>
      <%= link_to_add_fields t(:add_customisation_value), "tbody#customisation_values", :class => 'button icon-plus' %>
    </span>
  </li>
  <li>
    <%= button_link_to t(:back_to_customisation_types_list), spree.admin_customisation_types_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @customisation_type } %>

<%= form_for [:admin, @customisation_type] do |f| %>
  <fieldset>
    <legend align="center"><%= t(:customisation_values) %></legend>

    <%= render :partial => 'form', :locals => { :f => f } %>

    <table class="index sortable" data-hook data-sortable-link="<%= update_values_positions_admin_customisation_types_url %>">
      <thead data-hook="customisation_header">
        <tr>
          <th colspan="2"><%= t(:name) %></th>
          <th><%= t(:display) %></th>
          <th><%= t(:price) %></th>
          <th><%= t(:image) %></th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody id="customisation_values">
        <% if @customisation_type.customisation_values.empty? %>
          <tr id="none" data-hook="customisation_none" class="<%= cycle('odd', 'even')%>">
            <td colspan="5"><%= t(:none) %></td>
            <td class="actions"></td>
          </tr>
        <% else %>
          <%= f.fields_for :customisation_values do |customisation_value_form| %>
            <%= render :partial => 'customisation_value_fields', :locals => { :f => customisation_value_form } %>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
