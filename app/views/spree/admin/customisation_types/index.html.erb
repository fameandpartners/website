<% content_for :page_title do %>
  <%= t(:customisation_types) %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_ot_link">
    <%= button_link_to t(:new_customisation_type), new_admin_customisation_type_url, { :remote => true, :icon => 'icon-plus', :id => 'new_customisation_type_link' } %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<div id="new_customisation_type"></div>

<table class="index sortable" id="listing_customisation_types" data-hook data-sortable-link="<%= update_positions_admin_customisation_types_url %>">
  <colgroup>
    <col style="width: 44%">
    <col style="width: 44%">
    <col style="width: 12%">
  </colgroup>
  <thead>
    <tr data-hook="customisation_header">
      <th><%= t(:name) %></th>
      <th><%= t(:presentation) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @customisation_types.each do |customisation_type| %>
      <tr class="spree_customisation_type <%= cycle('odd', 'even')%>" id="<%= spree_dom_id customisation_type %>" data-hook="customisation_row">
        <td><span class="handle"></span> <%= customisation_type.name %></td>
        <td class="presentation"><%= customisation_type.presentation %></td>
        <td class="actions">
          <%= link_to_edit(customisation_type, :class => 'admin_edit_customisation_type', :no_text => true) %>
          <%= link_to_delete(customisation_type, :no_text => true) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
