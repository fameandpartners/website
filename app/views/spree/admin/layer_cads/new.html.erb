<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @layer_cad } %>

<%= form_for [:admin, @product, @layer_cad], :html => { :multipart => true } do |f| %>

<fieldset data-hook="new_layer_cad">

  <legend align="center"><%= t(:new_layer_cad) %></legend>

  <%= render :partial => 'form', :locals => { :f => f } %>

  <div class="form-buttons filter-actions actions" data-hook="buttons">
    <%= button t('actions.create'), 'icon-ok' %>
    <span class="or"><%= t(:or) %></span>
    <%= link_to_with_icon 'icon-remove', t('actions.cancel'), admin_product_layer_cads_path(@product), :class => 'button' %>
  </div>
</fieldset>
<% end %>
