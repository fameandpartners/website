<%= render :partial => '/spree/admin/orders/sub_menu' %>
<% content_for :page_title do %>
  <%== page_entries_info @orders, entry_name: t(:orders) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= paginate @orders %>
  </li>
  <li>
    <%= button_link_to t(:new_order), new_admin_order_url, :icon => 'icon-plus', :id => 'admin_new_order' %>
  </li>
<% end %>

<% content_for :table_filter do %>
    <%= render partial: 'spree/admin/orders/index/table_filter' %>
<% end %>

</div>
<!-- Close our friendly spree whacky container div-->
<div class="clearfix">
</div>
<div class="container-fullwide" >
<% if hide_line_items %>
<%= render 'orders_table' %>
<% else %>
<%= render 'line_items_table', orders: @orders %>
<% end %>
</div>

<%= paginate @orders %>
