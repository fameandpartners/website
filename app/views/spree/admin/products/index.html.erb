<% content_for :page_title do %>
  <%= t(:listing_products) %>
<% end %>

<% content_for :page_actions do %>
  <div class="toolbar" data-hook="toolbar">
    <ul class="actions header-action-links inline-menu">
      <li id="new_product_link">
        <%= button_link_to t(:new_product), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_product' } %>
      </li>
      <li id="product_batch_upload_link">
        <%= link_to "Batch upload", new_admin_product_uploads_url,
          { remote: true, id: 'admin_product_batch_upload', class: 'button icon-plus'} %>
      </li>
      <li>
        <%= link_to 'Export Product-Taxons CSV', admin_export_product_taxons_csv_path, class: 'button icon-file' %>
      </li>
    </ul>
  </div>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :table_filter_title do %>
  <%= t(:search) %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_products_sidebar">

    <%= search_form_for [:admin, @search] do |f| %>

        <%- locals = {:f => f} %>

        <div data-hook="admin_products_index_search">
          <div class="alpha five columns">
            <div class="field">
              <%= f.label :name_cont, t(:name) %>
              <%= f.text_field :name_cont, :size => 15 %>
            </div>

            <div class="field">
              <%= f.label :variants_including_master_sku_cont, t(:sku) %>
              <%= f.text_field :variants_including_master_sku_cont, :size => 15 %>
            </div>
          </div>

          <div class="five columns">
            <div class="field">
              <%= f.label :fabric_card, t(:fabric_card) %>
              <%= f.select :fabric_card_id_eq, options_from_collection_for_select(FabricCard.all, :id, :name, params[:q][:fabric_card_id_eq]), {:include_blank => true} %>
            </div>
            <div class="field checkbox">
              <%= render partial: 'search_null_column', locals: { f: f, column_name: :fabric_card_id } %>
            </div>
          </div>


          <div class="three columns">
            <div class="field">
              <%= f.label :factory_id, t(:factory) %><br>
              <%= f.select :factory_id_eq, options_from_collection_for_select(Factory.all, :id, :name, params[:q][:factory_id_eq]), {:include_blank => true} %>

            </div>
            <div class="field checkbox">
              <%= render partial: 'search_null_column', locals: {f: f, column_name: :factory_id} %>
            </div>
          </div>


          <div class="omega three columns">
            <div class="field select">
              <%= f.label :size_chart_eq, t(:size_chart) %><br>
              <%= f.select :size_chart_eq, SizeChart::CHARTS.keys, {:include_blank => true} %>
            </div>

            <div class="field checkbox">
              <label>
                <%= f.check_box :deleted_at_null, {:checked => params[:q][:deleted_at_null].blank?}, '', '1' %>
                <%= t(:show_deleted) %>
              </label>
              </div>

          </div>
        </div>

        <div class="clear"></div>

        <div class="form-buttons actions filter-actions" data-hook="admin_products_index_search_buttons">
          <%= button t(:search), 'icon-search' %>
        </div>
    <% end %>
  </div>
<% end %>

<div id="new_product" data-hook></div>
<div id="product_batch_upload" data-hook></div>

<% if @collection.any? %>
  <table class="index" id="listing_products">
    <thead>
      <tr data-hook="admin_products_index_headers">
        <th><%= t(:sku) %></th>
        <th colspan="2"><%= sort_link @search,:name, t(:name), { :default_order => "desc" }, {:title => 'admin_products_listing_name_title'} %></th>
        <th><%= t(:factory) %></th>
        <th><%= t(:fabric) %></th>
        <th><%= t(:size_chart) %></th>
        <th><%= sort_link @search,:master_default_price_amount, t(:master_price), {}, {:title => 'admin_products_listing_price_title'} %></th>
        <th data-hook="admin_products_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |product| %>
          <tr <%= "style='color: red;'" if product.deleted? %> id="<%= spree_dom_id product %>" data-hook="admin_products_index_rows" class="<%= cycle('odd', 'even') %>">
            <td class="align-center"><%= product.sku rescue '' %></td>
            <td class="align-center"><%= product_image(product) %></td>
            <td><%= link_to product.try(:name), edit_admin_product_path(product) %></td>
            <td><%= product.factory || '-' %></td>
            <td><%= fc = product.fabric_card; link_to(fc.name, [:admin, fc]) if fc %></td>
            <td><%= product.size_chart %></td>
            <td class="align-center"><%= product.display_price rescue '' %></td>
            <td class="actions" data-hook="admin_products_index_row_actions">
              <%= link_to_edit product, :no_text => true, :class => 'edit' unless product.deleted? %>
              &nbsp;
              <%= link_to_clone product, :no_text => true, :class => 'clone' %>
              &nbsp;
              <%= link_to_delete product, :no_text => true unless product.deleted? %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= t(:no_results) %>
  </div>
<% end %>

<%= paginate @collection %>
