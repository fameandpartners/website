javascript:
  $(document).ready(function() {
    // enable link
    (function() {
      $('#next-button').prop('disabled', false);
      $('#next-button').on('click', function(e) {
        e.preventDefault();
        $('form#edit_info').submit();
        $(e.currentTarget).prop('disabled', false);
      });
    })(document);

    // enable paletter
    (function() {
      $('.bridesmaid-pallete .pallete-color').on('click', function(e) {
        $item = $(e.currentTarget)
        $item.siblings('.selected').removeClass('selected');
        $item.addClass('selected');
        $('#info_color_code').val($item.data('code'));
      });
    })(document);
  })

.bridesmaid-info-header
  = image_tag "_bridesmaid/pic3.jpg"
  .text-box
    .big Colour Palette
    .small Select the colours that you would prefer your dresses in.

= form_for @user_details, as: :info, url: bridesmaid_party_colour_path, method: :put do |f|
  = f.hidden_field :color_code, { value: @palette.selected }

  .bridesmaid-pallete
    - @palette.colors.each do |color|
      - selection_status_class = (color == @palette.selected) ? 'selected' : ''
      .pallete-color style="background-color: #{ color };" class=(selection_status_class) data-code=(color)

  = link_to '#', class: 'block-with-triangle', id: 'next-button' do
    span.text NEXT STEP
    span.triangle-bottom style="border-top-color: #e6a49d"
