= content_for :inline_javascript do
  | page.initCheckoutEditPage();

- support_telephone = {'us' => '866 527 7797', 'au' => '1300 924 860'}[current_site_version.code]
= render 'marketing/trackers/zopim'
- cart = UserCart::UserCartResource.new(order: current_order).read

.checkout.page-content
  .container
    .row
      .col-md-12
        = render 'shared/redesign/flash_messages', flash: flash

    .row
      .col-md-8
        .checkout-masthead
          h1
            = link_to root_path
              = image_tag 'logo/logo-mobile.svg', alt: 'Fame & Partners', width: '78', height: '59'
            ' Secure checkout
          = react_component('SupportOptions', { support_telephone: support_telephone }, class: 'support-options')

        .comodo.hidden-xs.pull-right
          = image_tag "comodo-ssl.png", alt: "SSL", height: '35px', width: '112px'

        .checkout-breadcrumbs
          ol.breadcrumb
            - if current_step.eql?('masterpass')
              li class='active' MasterPass Confirmation
            - else
              li class=('active' if current_step.eql?('address')) Your information
              li class=('active' if current_step.eql?('payment')) Payment Method

        .col-md-4.col-sm-12.product-form.product-form-top.visible-xs.visible-sm
          = render 'spree/checkout/order_summary', cart: cart, run_setup_script: true

        - if current_step.eql?('address')
          .checkout-step data-name="address"
            = render 'address_step', current_step: current_step

        - if current_step.eql?('payment')
          - content_for :inline_javascript do
            | window.bill_address = #{ raw ::AddressSerializer.new(current_order.bill_address).to_json };

          .checkout-step data-name="payment"
            = render 'payment_step', current_step: current_step

        - if current_step.eql?('masterpass')
          .checkout-step data-name="masterpass"
            = render 'masterpass_step', current_step: current_step

        .row : .comodo.visible-xs.text-center : p
          = image_tag "comodo-ssl.png", alt: "SSL", height: '35px', width: '112px', style: 'margin-top:25px;margin-bottom:25px'

      .col-md-4.col-sm-12.product-form.product-form-side.hidden-xs.hidden-sm
        = render 'spree/checkout/order_summary', cart: cart, run_setup_script: false
