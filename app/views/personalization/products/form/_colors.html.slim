#customize-color.tab-content.dress-color
  .tab-title Colour
  .tab-subtitle Choose a colour from this list or select a colour from the colour picker (the rainbow colour at the end).
  .colors
    label.color.black
      = f.radio_button :color, '#000000', data: {required: true}
    label.color.red
      = f.radio_button :color, '#ED0234', data: {required: true}
    label.color.blue
      = f.radio_button :color, '#15558B', data: {required: true}
    label.color.green
      = f.radio_button :color, '#269C36', data: {required: true}
    label.color.yellow
      = f.radio_button :color, '#FFE100', data: {required: true}
    label.color.pink
      = f.radio_button :color, '#FF3B9D', data: {required: true}
    label.color.orange
      = f.radio_button :color, '#FF8434', data: {required: true}
    label.color.peach
      = f.radio_button :color, '#FFC598', data: {required: true}
    label.color.silver
      = f.radio_button :color, '#D0D1CC', data: {required: true}
    label.color.colorpicker
      = f.radio_button :color, f.object.color_picker? ? f.object.color : '', data: {required: true}, checked: f.object.color_picker?
  .color-picker.text-center.hide
    .color-picker-container
      input.color-picker-block type="hidden" value="#{f.object.color}"
      .form
        .input
          input type="text" name="color" value="#{f.object.color}" style="background-color: #{f.object.color}"
        .submit
          = link_to '#', class: 'choose-color back-to-list' do
            i.icon.icon-tickmark
