      .fright.addthis_toolbox.addthis_default_style
        a class="addthis_counter addthis_pill_style"
  .grid-container.coupon-code.hide
    .couponcode
      .title Your Promo code:
      span Music30
      .hint $30 off your perfect dress
  .grid-container.viewmore-container
    hr
    h2 See more of our dresses
    ul.products-list.grid-container
      - @other_products.each do |product|
        - cache ['nyemix', 'product', product.id, 'thumbnail_and_wish'], :expires_in => configatron.cache.expire.normally do
          li.product-item.grid-25
            .thumbnail
              .like = add_to_wishlist_link(product)
              = link_to collection_product_path(product) do
                = hoverable_product_image_tag product, itemprop: "image", width: 243, height: 352, alt: product.name
            .name = link_to product.name, collection_product_path(product)
