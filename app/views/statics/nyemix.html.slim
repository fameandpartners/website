        div class="fb-like" data-href="http://www.fameandpartners.com/collection/Long-Dresses/now_you_see_me" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false" notify="true"
      .fright.addthis_toolbox.addthis_default_style
        a class="addthis_counter addthis_pill_style"
