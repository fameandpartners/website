- if @collection.total_products > @collection.products.size
  .row.relative.more-products
    .status.active
      = link_to 'More Dresses', '#', class: 'btn btn-featured', data: { action: 'show-more-collection-products' }
    .status.loading style="display: none;"
      = image_tag('fame-spinner.gif')
    .status.inactive style="display: none;"
    // nothing

- if !current_page?(dresses_path)
  .row.relative.more-products
    = link_to 'More Dresses', dresses_path, class: 'btn btn-featured'
