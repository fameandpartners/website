  window.clickAddMoodboard= (target) ->
    item = {
      moodboard_id: $(target).data("moodboard-id"),
      product_id:   $(target).data("product-id"),
      color_id:     $(target).data("color-id")
    };
    window.app.user_moodboards.addItem(item)
    $("i", $(target)).removeClass("fa-plus").addClass("fa-check")
