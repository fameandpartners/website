.personal-boutique.boutique-competition-page
  .wrap
    .page-title
      h1 Nyree & Gregg
    .competition-header
      = image_tag '_boutique/competition-header.jpg'
      .match
        .pink = UserStyleProfile.calculate_match(@style_profile, @celebrity_style_profile)
        span match
      .text
        .title Promocode:
        .code 
          'GREGG
          span.pink 
            '25
        /= link_to 'share', '#', class: 'btn mid empty border'
        - if @fb_invite.present?
          #fb-root
          .fb-send.btn.mid.empty.border data-href="http://www.fameandpartners.com#{ new_competition_entry_path(invite: @fb_invite.token) }&fb_ref=competition&fb_source=message" Share
    .page-title-secondary
      h2.bordered 
        span Greggâ€™s favourite dresses

    .category-catalog.products
      .row
        - if @celebrity_dresses.present?
          - @celebrity_dresses.each do |product|
            .grid-4
              - cache [:shared, :product, product.id], :expires_in => configatron.cache.expire.long do
                = render 'spree/products/cached_product', product: product
        - else
          .not-found Sorry, no dresses match your criteria  

    .page-title-secondary
      h2 Recommended DRESSES
      .arrows-line-horizontal
      .bg-elem-1
      .bg-elem-2
      .bg-elem-3

    .category-catalog
      .row
        - @recommended_dresses.each do |product|
          .grid-3
            - cache [:shared, :product, product.id], :expires_in => configatron.cache.expire.long do
              = render 'spree/products/cached_product', product: product
    

    .page-title-secondary
      h2 more dresses
      .arrows-line-horizontal
      h3 Nothing you love above? Check out more of our range below
      = link_to 'View all of our dresses.', collection_path, class: 'btn mid'
      .bg-elem-1
      .bg-elem-2
      .bg-elem-3
    
    .category-catalog
      .row
        - @dresses.each do |product|
          .grid-3
            - cache [:shared, :product, product.id], :expires_in => configatron.cache.expire.long do
              = render 'spree/products/cached_product', product: product
