.registrations__details-form.left-side-centered-container
  h1
    em = current_spree_user.first_name
    | , we want to know more.
  .form
    = form_for current_spree_user, as: :spree_user, url: wedding_atelier.signup_path, method: :put do |f|
      = f.fields_for :events, @event do |ff|
        .form-group
          = ff.label :name, 'What should we call your wedding board?'
          = ff.text_field :name, class: 'form-control'
        .form-group
          = f.label :event_role, "What's your role in the wedding?"
          = f.select :event_role, options_for_select(@roles), {}, class: 'form-control'
          = f.hidden_field :wedding_atelier_signup_step, value: 'invite'
        .form-group
          = ff.label :number_of_assistants, "How many bridesmaids will be in the wedding?"
          = ff.number_field :number_of_assistants, { min: 0, class: 'form-control number-field js-number-field' }
        .form-group
          = ff.label :date, "What is the date of the wedding?"
          .input-group.date.date-picker
            = ff.text_field :date, { class: 'form-control', placeholder: 'mm/dd/yyyy', data: { outside_error: true } }
            span.input-group-addon
              i.calendar-icon
          = ff.hidden_field :event_type, value: 'wedding'
        br
        .row
          .col-xs-12.col-sm-6
            = link_to 'back', :back, class: 'btn btn-white full-width'
          .col-xs-12.col-sm-6
            = f.submit 'next', class: 'btn btn-black full-width'
