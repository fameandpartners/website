= react_component 'MoodBoardEvent',
                  { event_path: event_path(@event),
                    current_user_id: spree_current_user.id,
                    send_invite_path: event_invitations_path(@event),
                    remove_assistant_path: event_assistant_path(event_id: @event, id: 'id'),
                    twilio_token_path: token_path,
                    event_id: @event.id,
                    dresses_path: event_dresses_path(@event),
                    wedding_name: @event.name,
                    bot_profile_photo: image_path('bot-profile.svg'),
                    profile_photo: profile_image_path,
                    username: spree_current_user.full_name,
                    user_id: spree_current_user.id,
                    roles_path: '',
                    filestack_key: ENV['FILESTACK_KEY'] },
                  { class: 'moodboard-react-container container-fluid' }

- content_for :javascript do
  script src="//media.twiliocdn.com/sdk/rtc/js/ip-messaging/v0.9/twilio-ip-messaging.min.js"
  script src="//media.twiliocdn.com/sdk/js/common/v0.1/twilio-common.min.js"
  script src="//api.filestackapi.com/filestack.js"
