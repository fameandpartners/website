h3 = @item_return.order_payment_method
- if @item_return.order_payment_method == 'Pin'
  p = link_to "#{Money.new(@item_return.order_paid_amount).format} #{@item_return.order_payment_ref}", "https://dashboard.pin.net.au/charges/#{@item_return.order_payment_ref}"
- elsif  @item_return.order_payment_method == 'PayPal'
  p
    => @item_return.order_payment_ref
    => @item_return.order_payment_date
    => @item_return.order_payment_date.try(:strftime, "%b")

- else
  p Unknown Payment
