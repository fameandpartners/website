= content_for :page_title do
  ' Sale Items Report

.ibox
  .ibox-title
    ' Sale Items Report
  .ibox-content
    = form_tag admin_ui.reports_sale_items_path, method: 'post', class: 'form-horizontal'
      = render partial: 'form_fields'
      .form-group
        .col-lg-12
          button type='submit' Generate

h2 Sample

div.pre-scrollable style='max-height:100%;'
  table.table.table-condensed
    thead
      tr
        - head = @rows.first
        - head.keys.each do |k|
          th = k
    tbody
      - @rows.each do |row|
        tr
          - row.values.each do |v|
            td = v
